{
  "path": "/admin/products",
  "name": "產品",
  "collection": "product",
  "primaryKey": "id",
  "searchFields": [
    "name",
    "searchText"
  ],
  "columns": [
    {
      "title": "神奇寶貝編號",
      "key": "pokemon_id",
      "dataIndex": "pokemon_id"
    },
    {
      "title": "分類",
      "key": "labels",
      "dataIndex": "labels",
      "customType": "labels"
    },
    {
      "title": "名稱",
      "key": "name",
      "dataIndex": "name"
    },
    {
      "title": "公開",
      "key": "public",
      "dataIndex": "public",
      "dataType": "boolean"
    },
    {
      "title": "價錢",
      "key": "price",
      "dataIndex": "price"
    }
  ],
  "querySpec": {
    "pageSizeOptions": [
      10,
      30,
      50
    ],
    "sortOptions": [
      {
        "name": "編號低到高",
        "value": "pokemon_id"
      },
      {
        "name": "編號高到低",
        "value": "-pokemon_id"
      }
    ],
    "canSearch": true,
    "outletKey": "productQueryState",
    "filters": [
      {
        "key": "public",
        "name": "發布狀態",
        "options": [
          {
            "value": "true",
            "name": "公開"
          },
          {
            "value": "false",
            "name": "未公開"
          }
        ]
      }
    ]
  },
  "formSpec": {
    "customName": "ProductForm",
    "schema": {
      "title": "",
      "type": "object",
      "required": [],
      "properties": {
        "pokemon_id": {
          "type": "number",
          "title": "神奇寶貝編號"
        },
        "images": {
          "type": "array",
          "title": "產品圖片",
          "items": {
            "type": "object"
          }
        },
        "labels": {
          "type": "array",
          "title": "分類",
          "items": {
            "type": "string"
          }
        },
        "name": {
          "type": "string",
          "title": "商品名稱"
        },
        "price": {
          "type": "number",
          "title": "商品價錢",
          "default": 100
        },
        "public": {
          "type": "boolean",
          "title": "公開",
          "default": false
        },
        "searchText": {
          "type": "string",
          "title": "搜尋關鍵字"
        },
        "variants": {
          "type": "array",
          "title": "商品加價選項",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "title": "選項類型",
                "enum": [
                  "bool",
                  "single"
                ],
                "enumNames": [
                  "是非題",
                  "單選題"
                ]
              },
              "name": {
                "type": "string",
                "title": "名稱"
              },
              "label": {
                "type": "string",
                "title": "顯示"
              }
            },
            "dependencies": {
              "type": {
                "oneOf": [
                  {
                    "properties": {
                      "type": {
                        "enum": [
                          "bool"
                        ]
                      },
                      "price": {
                        "type": "number",
                        "title": "加價"
                      }
                    }
                  },
                  {
                    "properties": {
                      "type": {
                        "enum": [
                          "single"
                        ]
                      },
                      "choices": {
                        "type": "array",
                        "title": "單選選項",
                        "items": {
                          "type": "object",
                          "properties": {
                            "name": {
                              "type": "string",
                              "title": "名稱"
                            },
                            "label": {
                              "type": "string",
                              "title": "顯示"
                            },
                            "price": {
                              "type": "number",
                              "title": "加價"
                            }
                          }
                        }
                      }
                    }
                  }
                ]
              }
            }
          }
        },
        "og_image": {
          "type": "string",
          "title": "og-image"
        }
      }
    },
    "uiSchema": {
      "description": {
        "ui:widget": "textarea"
      },
      "intro": {
        "ui:widget": "textarea"
      },
      "spec": {
        "ui:widget": "textarea"
      },
      "remark": {
        "ui:widget": "textarea"
      },
      "searchText": {
        "ui:widget": "textarea"
      },
      "images": {
        "ui:field": "rev-files"
      },
      "og_image": {
        "ui:field": "rev-rename-image",
        "ui:readonly": true,
        "referenceImageFieldKey": "images[0].expected_url",
        "hidden": true
      }
    }
  },
  "canBulkWrite": false,
  "bulkWriteFormSpec": {
    "schema": {
      "title": "",
      "type": "object",
      "required": [],
      "properties": {
        "public": {
          "type": "boolean",
          "title": "公開",
          "default": false
        }
      }
    }
  },
  "actionBar": []
}
