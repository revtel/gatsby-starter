{
  "path": "/admin/orders",
  "name": "訂單",
  "collection": "order",
  "primaryKey": "id",
  "searchFields": [
    "order_number",
    "buyer_name",
    "buyer_phone"
  ],
  "searchApproach": "union",
  "renderCreateButton": false,
  "renderDeleteButton": false,
  "columns": [
    {
      "title": "訂單編號",
      "key": "order_number",
      "dataIndex": "order_number"
    },
    {
      "title": "購買人姓名",
      "key": "buyer_name",
      "dataIndex": "buyer_name"
    },
    {
      "title": "購買人電話",
      "key": "buyer_phone",
      "dataIndex": "buyer_phone"
    },
    {
      "title": "狀態",
      "key": "status",
      "dataIndex": "status",
      "customType": "order_status"
    },
    {
      "title": "金流狀態",
      "key": "payment_status",
      "dataIndex": "payment_status",
      "customType": "payment_status"
    },
    {
      "title": "物流狀態",
      "key": "logistics_status",
      "dataIndex": "logistics_status",
      "customType": "logistics_status"
    }
  ],
  "querySpec": {
    "pageSizeOptions": [
      5,
      10,
      15,
      20
    ],
    "sortOptions": [
      {
        "name": "日期近到遠",
        "value": "-created"
      },
      {
        "name": "日期遠到近",
        "value": "created"
      }
    ],
    "canSearch": true,
    "filters": [
      {
        "key": "status",
        "name": "訂單狀態",
        "options": [
          {
            "value": "waiting",
            "name": "未處理"
          },
          {
            "value": "done",
            "name": "已完成"
          },
          {
            "value": "canceled",
            "name": "已取消"
          }
        ]
      },
      {
        "key": "payment_status",
        "name": "金流狀態",
        "options": [
          {
            "value": "pending",
            "name": "尚未付款"
          },
          {
            "value": "waiting",
            "name": "款項確認中"
          },
          {
            "value": "success",
            "name": "付款成功"
          },
          {
            "value": "failure",
            "name": "付款失敗"
          }
        ]
      },
      {
        "key": "logistics_status",
        "name": "物流狀態",
        "options": [
          {
            "value": "pending",
            "name": "備貨中"
          },
          {
            "value": "in_delivery",
            "name": "已出貨"
          },
          {
            "value": "delivered",
            "name": "已送達"
          },
          {
            "value": "exception",
            "name": "不明"
          }
        ]
      }
    ]
  },
  "formSpec": {
    "customName": "AdminOrderDetailForm",
    "schema": {
      "title": "",
      "type": "object",
      "required": [],
      "properties": {
        "order_number": {
          "type": "string",
          "title": "訂單編號",
          "readOnly": true
        },
        "order_note": {
          "type": "string",
          "title": "訂單備註",
          "readOnly": true
        },
        "total": {
          "type": "number",
          "title": "訂單總金額",
          "readOnly": true
        },
        "tax": {
          "type": "number",
          "title": "訂單稅額",
          "readOnly": true
        },
        "created": {
          "type": "number",
          "title": "訂單日期",
          "readOnly": true
        },
        "payment_status": {
          "type": "string",
          "title": "金流狀態",
          "readOnly": true
        },
        "status": {
          "type": "string",
          "title": "訂單狀態",
          "default": "waiting",
          "anyOf": [
            {
              "type": "string",
              "enum": [
                "waiting"
              ],
              "title": "未處理"
            },
            {
              "type": "string",
              "enum": [
                "done"
              ],
              "title": "已完成"
            },
            {
              "type": "string",
              "enum": [
                "canceled"
              ],
              "title": "已取消"
            }
          ]
        }
      }
    },
    "uiSchema": {
      "created": {
        "ui:widget": "rev-datetime-to-timestamp-picker"
      }
    }
  },
  "actionBar": []
}
